---
import "../styles/style.css";
---
<a href="event">
    <article class="program-card">
        <img src="/imgs/acidsun.webp" alt="acid sun">
    </article>
</a>

<style>
    img {
        width: 800px;
    }

    .program-card {
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        position: relative;
    }

    .program-card:hover {
        filter: brightness(45%);
        cursor: pointer;
    }

    .program-card::before {
        position: absolute;
        top: center;
        left: center;
        background-color: rgb(0, 0, 0);
        padding: 10px;
        z-index: 1;
        opacity: 0; 
        transition: opacity 0.3s; 
    }

    .program-card:hover::before {
        content: "Click to read more about the event"; 
        opacity: 1;
        color: rgb(254, 254, 254);
    }

    @media(max-width:1800px){
        img, {
            width: 700px;
        }
    }

    @media(max-width:1600px){
        img {
            width: 650px;
        }
    }
    @media(max-width:1500px){
        img {
            width: 600px;
        }
    }
    @media(max-width:1400px){
        img {
            width: 550px;
        }
    }

    @media(max-width:1262px){
        img {
            width: 500px;
        }
    }

    @media(max-width:1166px){
        img {
            width: 450px;
        }
    }

    @media(max-width:1000px){
        img {
            width: 400px;
        }
    }

    @media(max-width:900px){
        img {
            width: 350px;
        }
    }

    @media(max-width:800px){
        img {
            width: 300px;
        }
    }

    @media(max-width:700px){
        img {
            width: 250px;
        }
    }

    @media(max-width:600px){
        img {
            width: 200px;
        }
    }

    @media(max-width:470px){
        img {
            width: 150px;
        }
    }
</style>